{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "smart-tool",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "setFullscreen": true
      },
      "dialog": {
        "all": true
      },
      "os": {
        "all": true
      },
      "globalShortcut": {
				"all": true
			},
      "http": {
        "request": true,
        "scope": ["https://**", "http://**"]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          },
          {
            "name": "bash",
            "cmd": "bash",
            "args": true
          }
        ]
      },
      "path": {
				"all": true
			},
      "fs": {
				"all": true,
				"scope": ["$APPDATA/**", "$DOWNLOAD/**"]
			},
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/assets/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.smart-tool",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/windo/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "YOUR_UPDATER_SIGNATURE_PUBKEY_HERE"
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "smart-tool",
        "width": 800,
        "visible": false
      },
      {
        "width": 500,
        "height": 300,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "url": "loading.html",
        "label": "loading",
        "title": "smart-tool-loading"
      }
    ]
  }
}
